<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="himesp6.com.cis2237.doodlz.LineWidthDialogFragment"
    android:columnCount="1">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_line_width_dialog"
        android:id="@+id/textView"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_imageview_height"
        android:id="@+id/imageViewLine"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="1" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekLine" />


</GridLayout>
